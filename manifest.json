{
	"name": "Breaktimer",
	"description": "A Chrome App to help remember taking breaks.",
	"version": "0.1",
	"manifest_version": 2,
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	"icons": {
		"16": "breaktimer-16.png",
		"128": "breaktimer-128.png"
	},
	"permissions": [
		"alarms",
		"notifications"
	]
}